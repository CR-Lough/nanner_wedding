<!-- Page Header -->
<header class="masthead" style="background-image: url('startbootstrap-clean-blog-gh-pages/assets/img/wedding.jpg'); height: 200px;">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>Babin Wedding Photos</h1>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Main Content -->
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">

            <!-- Create Post Form -->
            <%= form_for(@post, html: { multipart: true }) do |form| %>
                <div class="form-group">
                    <%= form.label :title %>
                    <%= form.text_field :title, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= form.label :images %>
                    <%= form.file_field :images, multiple: true, class: "form-control-file" %>
                </div>
                <%= form.submit "Create Post", class: "btn btn-primary" %>
            <% end %>

            <!-- Display Posts -->
            <% @posts.each do |post| %>
                <div class="card mb-4">
                    <div class="card-body">
                        <h2 class="card-title"><%= post.title %></h2>
                        <div class="row">
                            <!-- Loop through each image in the post -->
                            <% post.images.each do |image| %>
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="card-body">
                                            <% if image.representable? %>
                                                <%= image_tag image.representation(resize_to_limit: [300, 300]) %>
                                            <% else %>
                                                <div class="placeholder-image">
                                                    <%= image_tag "placeholder.png", alt: "Download image" %>
                                                </div>
                                            <% end %>
                                        </div>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            <% end %>

        </div>
    </div>
</div>
<!-- Footer -->
<footer class="border-top">
    <div class="container px-4 px-lg-5">
        <!-- Footer content -->
    </div>
</footer>
